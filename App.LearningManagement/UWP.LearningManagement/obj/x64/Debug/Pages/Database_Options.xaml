<Page
    x:Class="UWP.LearningManagement.Pages.Database_Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.LearningManagement.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ViewModels="using:UWP.LearningManagement.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel x:ConnectionId='2' x:Name="databaseMenu">
            <ToggleButton x:ConnectionId='4' x:Name="ViewToggle" Content="Switch To TA/Instructor Mode" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Visibility="Collapsed"                                                                           Grid.Row="0" />
            <ListBox Grid.Row ="1"
                ItemsSource="{Binding CoursesDTOs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedCourse, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding DisplayCourses}">
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='9' Content="Add Course"                            Grid.Column="0"/>
                <Button x:ConnectionId='10' Content="Edit Course" HorizontalAlignment="Center"                             Grid.Column="1"/>
                <Button x:ConnectionId='11' Content="Delete Course" HorizontalAlignment="Right"                               Grid.Column="2"/>
            </Grid>
            <StackPanel Grid.Row="3">
                <ListBox 
                    ItemsSource="{Binding PeopleDTOs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedPerson, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding DisplayPeople}">
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='5' Content="Add Person"                            Grid.Column="0"/>
                    <Button x:ConnectionId='6' Content="Edit Person" HorizontalAlignment="Center"                             Grid.Column="1"/>
                    <Button x:ConnectionId='7' Content="Delete Person" HorizontalAlignment="Right"                               Grid.Column="2"/>
                </Grid>
            </StackPanel>
        </StackPanel>
        <Button x:ConnectionId='3' Content="Return To Main Menu" HorizontalAlignment="Stretch" FontSize="14"                      VerticalAlignment="Bottom" Grid.Row="4"/>
    </Grid>
</Page>

